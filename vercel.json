{
  "version": 2,
  "name": "goodluckark",
  "public": false,
  "cleanUrls": true,
  "trailingSlash": false,
  "outputDirectory": "docs",
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/novels/:novel",
      "destination": "/novels/:novel/index.html"
    },
    {
      "source": "/novels/:novel/:chapter",
      "destination": "/novels/:novel/:chapter.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, s-maxage=86400"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        }
      ]
    },
    {
      "source": "/covers/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
